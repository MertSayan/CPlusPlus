#include <iostream>

using namespace std;

int main(){
	
	int sayi;
	int faktoriyel=1;
	
	cout<<"Faktoriyelini hesaplamak istediginiz sayiyi giriniz:";
	cin>>sayi;
	
	for(int i=1;i<=sayi;i++){
		faktoriyel=faktoriyel*i;
	}
	cout<<sayi<<"'nin faktoriyeli: "<<faktoriyel<<endl;
	
	
	system("pause");
	return 0;
}
