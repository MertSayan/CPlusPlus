#include <iostream>
#include <locale.h>
#include <time.h>
#include <stdlib.h>
#include <string.h>
using namespace std;
int main(){
	srand(time(0));
	int adet=0;
	int matrisA[4][4];
	int matrisB[4][4];
	for(int i=0;i<4;i++){
		for(int j=0;j<4;j++){
			matrisA[i][j]=rand()%(1-0+1)+0;
		}
	}
	for(int i=0;i<4;i++){
		for(int j=0;j<4;j++){
			matrisB[i][j]=rand()%(1-0+1)+0;
		}
	}
	for(int i=0;i<4;i++){
		for(int j=0;j<4;j++){
			if(matrisA[i][j]==matrisB[i][j]){
				adet++;
			}
		}
	}
	cout<<"Iki matrisde aynÄ± olan eleman sayisi:"<<adet<<endl;
	for(int i=0;i<4;i++){
		cout<<matrisA[i][0]<<"\t"<<matrisA[i][1]<<"\t"<<matrisA[i][2]<<"\t"<<matrisA[i][3]<<endl;
	}
	cout<<endl;
	cout<<endl;
		for(int i=0;i<4;i++){
		cout<<matrisB[i][0]<<"\t"<<matrisB[i][1]<<"\t"<<matrisB[i][2]<<"\t"<<matrisB[i][3]<<endl;
	}
	system("pause");
	return 0;
}
